{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noResolve": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react", 
    "outDir": "dist",
    "declaration": true, // 自动生成d.ts文件
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@assets/*":["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@image/*": ["src/assets/image/*"],
      "@svg/*": ["src/assets/svg/*"],
      "@scss/*": ["src/assets/scss/*"],
    }
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "dev.tsx"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/__test__/**/*"]
}